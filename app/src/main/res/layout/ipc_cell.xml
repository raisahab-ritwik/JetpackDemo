<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:paddingTop="23dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Web 5th appril 2017"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/transparent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/team1_vs_team2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="Vs"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/material_blue_grey_700" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team1_vs_team2"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="About"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="location"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/material_blue_grey_500" />

            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/team1_img"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/flag_defualt" />

                    <TextView
                        android:id="@+id/team1_name_ipl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/team1_img"
                        android:text="team name"
                        android:textColor="#222" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Starts in to next"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/team2_img"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/flag_defualt" />

                    <TextView
                        android:id="@+id/team2_name_ipl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/team2_img"
                        android:layout_alignParentRight="true"
                        android:text="team name"
                        android:textColor="#222"

                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>