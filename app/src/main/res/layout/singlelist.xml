<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:paddingTop="23dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/match_winning_colorname_gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColorPrimary">

            <RelativeLayout
                android:id="@+id/the_big_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/overs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="overs"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/navigationBarColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/overs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="runs"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/overs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="3rd Match"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/navigationBarColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mnum"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="22.5 Ovs"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/grnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUBai United "
                        android:textColor="@color/navigationBarColor"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/grnd"
                        android:text="Arab Emirates"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/flag1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/flag_defualt" />

                    <TextView
                        android:id="@+id/team1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/flag1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:text="team"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/flag2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/flag_defualt" />

                    <TextView
                        android:id="@+id/team2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/flag2"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text="team"
                        android:textAlignment="center"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/empty_space_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/empty_space_layout"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IRE"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bateamscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sname"
                        android:text="116/1"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/scnd_sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LHQ"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bowlteamscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/scnd_sname"
                        android:text="144/7"
                        android:textAppearance="?android:textAppearance"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/the_big_main"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/transparent"
                android:gravity="center">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text=" LHQ WON BY 6 RUN"
                    android:textAlignment="center"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/layout6"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/match_name_display_color"
                android:gravity="center"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/srs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="South Africa tour of New zeland"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearance"
                    android:textColor="@color/windowBackground"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/srs_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/srs"
                    android:text=""
                    android:textColor="@color/windowBackground"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="TEST"
                    android:textColor="@color/windowBackground"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
